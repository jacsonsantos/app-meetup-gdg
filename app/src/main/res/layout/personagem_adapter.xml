<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_personagem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@id/container"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/container"
            app:layout_constraintRight_toRightOf="@id/container"
            app:layout_constraintTop_toTopOf="@id/container"
            app:layout_constraintVertical_bias="0.00">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="108dp"
                    android:layout_height="156dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/simpsons"
                    app:layout_constraintBottom_toBottomOf="@id/card_container"
                    app:layout_constraintLeft_toLeftOf="@id/card_container"
                    app:layout_constraintRight_toRightOf="@id/card_container"
                    app:layout_constraintTop_toTopOf="@id/card_container"
                    android:layout_margin="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/nome_personagem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/nome_personagem"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/card_container"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@id/avatar"
                    app:layout_constraintRight_toRightOf="@id/card_container"
                    app:layout_constraintTop_toTopOf="@id/avatar"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/desc_personagem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="casual"
                    android:text="@string/desc_personagem"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/card_container"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@id/avatar"
                    app:layout_constraintRight_toRightOf="@id/card_container"
                    app:layout_constraintTop_toBottomOf="@id/nome_personagem"
                    app:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>